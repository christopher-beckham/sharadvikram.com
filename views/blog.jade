extends layout

block title
  title Blog - Sharad Vikram

block css
  link(rel='stylesheet', href='/css/blog.css')

block content
  h1 Blog
  each post in posts
    div.blog-title
      a.blog-title(href='/blog/#{post.id}')
        | #{post.title} - #{convertDate(post.date)}
    markdown.blog-content(ng-model='post.content')
      | #{post.content}
